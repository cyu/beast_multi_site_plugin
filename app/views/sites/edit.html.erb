<h1><%= 'Edit Site'[:edit_site] %></h1>

<%= error_messages_for :site %>

<% form_for :site,
     :url  => site_path(@site),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag 'Save Site'[:save_site], :or => link_to('Cancel'[:cancel], sites_path) %>
<% end -%>